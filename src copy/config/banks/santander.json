{
  "version": "1.0",
  "name": "Santander",
  "description": "Extrato do Banco Santander",
  "locale": "pt-BR",
  "encoding": "UTF-8",
  "bankId": "033",
  "header": {
    "patterns": {
      "period": {
        "regex": "Per[íi]odo[:\\s]+de\\s+(\\d{2}/\\d{2}/\\d{4})\\s+a\\s+(\\d{2}/\\d{2}/\\d{4})",
        "groups": {
          "start": 1,
          "end": 2
        }
      }
    }
  },
  "section_movements": {
    "starts_after": "MOVIMENTAÇÃO",
    "transaction_anchor_regex": "(\\d{2}/\\d{2})\\s+(.+?)\\s+([-]?[\\d.]+,\\d{2})",
    "skip_if_name_startswith": ["SALDO", "TOTAL", "Página"],
    "date": {
      "format_in": "DD/MM",
      "year_hint": "header"
    },
    "amount": {
      "locale": "pt-BR",
      "sign_by_value": true
    }
  },
  "mapping": {
    "trntype": {
      "rules": [
        { "contains": ["PIX ENVIADO", "PIX TRANSF"], "ofx": "XFER" },
        { "contains": ["PIX RECEBIDO"], "ofx": "DEP" },
        { "contains": ["TED", "TRANSFERENCIA"], "ofx": "XFER" },
        { "contains": ["PAGAMENTO", "PAG "], "ofx": "PAYMENT" },
        { "contains": ["TARIFA", "TAR "], "ofx": "FEE" },
        { "contains": ["DEPOSITO"], "ofx": "DEP" },
        { "contains": ["SAQUE"], "ofx": "ATM" }
      ]
    }
  }
}
